Module('caba:vci_dspin_network',
	classname = 'soclib::caba::VciDspinNetwork',
	tmpl_parameters = [
	    parameter.Module('vci_param', default = 'caba:vci_param'),
	    parameter.Int('dspin_fifo_size'),
	    parameter.Int('dspin_yx_size'),
