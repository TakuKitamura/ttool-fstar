	    Uses('caba:dspin_router', dspin_data_size = 34),
	    Uses('caba:vci_dspin_initiator_wrapper', dspin_yx_size = 4),
	    Uses('caba:vci_dspin_target_wrapper', dspin_yx_size = 4),
	],
	extensions = [
		'dsx:interconnect=root'
	],
