sb=$(dirname $0)
if [ "${sb:0:1}" != "/" ] ; then
	sb=${PWD}/${sb}
fi

SOCLIB_DIR=$(dirname $(dirname ${sb}))

export PATH=${SOCLIB_DIR}/utils/bin:$PATH
export SOCLIB_TTY=TERM
export SOCLIB_FB=HEADLESS

for pf in caba-vgmn-multi_timer-mips32 caba-vgmn-llsc-mipsel caba-vgmn-xicu-mips32 ; do
	cd ${SOCLIB_DIR}/soclib/platform/topcells/$pf
	make -k soft_clean
	make test || exit 1
done

exit 0
