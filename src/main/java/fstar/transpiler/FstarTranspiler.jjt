public class FstarTranspiler
{
  private static String upperCaseFirst(String val) {
    char[] arr = val.toCharArray();
    arr[0] = Character.toUpperCase(arr[0]);
    return new String(arr);
  }

  private static String readAll(String path) throws IOException {
    Path fileName = Paths.get(path);
    // String readFile = Files.readString(fileName);
    // System.out.println(actual);

    return new String(Files.readAllBytes(fileName));
  }

  private static void writeAll(String path, String content) throws IOException {
    FileWriter file = new FileWriter(path);
    PrintWriter pw = new PrintWriter(new BufferedWriter(file));
    pw.println(content);
    pw.close();
  }

  public static void main(String [] args) {

    Map<String, String> transpileSeed = new HashMap<String, String>();

    transpileSeed.put("methodDeclaration", "fstar_int32_array validatePacketData(uint32 can_id, uint8 can_dlc, uint8[] frame_data)"); // 関数宣言
    transpileSeed.put("require", "get(frame_data, 123) == 456"); // 事前条件
    transpileSeed.put("ensure", "true"); // 事後条件(retは返り値を示す)
    transpileSeed.put("requireLogic", "get(frame_data, 123) == 456"); // ロジック(配列長を扱う場合)
    transpileSeed.put("ensureLogic", "len(frame_data) == 8"); // ロジック(配列長を扱う場合)

    // TODO: ここは開発者の責任でコード上に手書きしてもらう
    transpileSeed.put("okInitRetValue", "0"); // この関数が正常系の処理を行った際の返り値(テンプレート上の初期値)
    transpileSeed.put("ngInitRetValue", "1"); // この関数がエラー処理を行った場合の返り値(テンプレート上の初期値)

    // F*言語のテンプレートでの不足機能を正しく実装できたかの判定用テストコードの値

    // TODO: ここは開発者の責任でコード上に手書きしてもらう
    // テスト関数の引数
    String[][]testFuncArgs =  { // test(arg1, arg2)
        {"1", "2", "[1,2,0,0,0,0,0,0]"}, // test1 arg
        {"2", "3", "[1,2,3,0,0,0,0,0]"} // test2 arg
    };

    // TODO: ここは開発者の責任でコード上に手書きしてもらう
    // 期待するテスト関数が返す値
    String[]testExpectedResult = {"0", "1"}; // test1 expected, test2 expected, 

    try {
        String result = transpile("/tmp", transpileSeed, testFuncArgs, testExpectedResult);
        // System.out.println(result);
    } catch (Exception e) {
        e.printStackTrace();
    }
  }

  public static String transpile(String projectDirPath, Map<String, String> transpileSeed, String[][]testFuncArgs, String[]testExpectedResult) throws Exception {

    String function = transpileSeed.get("methodDeclaration");

    // regex match
    Pattern functionPattern = Pattern.compile("^(fstar_(.*)) (.*\\(.*)");

    Matcher functionMatcher = functionPattern.matcher(function);

    String returnFstarTypeName = "";

    if (functionMatcher.find()) {
        returnFstarTypeName = functionMatcher.group(1);
        String returnTypeName = functionMatcher.group(2).replaceAll("_array", "[]");
        String removedFstarTypeName = functionMatcher.group(3);
        // transpileSeed update
        // transpileSeed.put("methodDeclaration", returnTypeName);
        function = returnTypeName + " " + removedFstarTypeName;
    } else {
        throw new Exception("require fstar_(???) as return-type");
    }

    // System.out.println(functionMatcher.find());


    // throw new Exception("x");
    

    InputStream methodDeclarationInput = new ByteArrayInputStream(function.getBytes());
    FstarTranspiler methodDeclarationParser = new FstarTranspiler(methodDeclarationInput);


    MethodDeclaration methodDeclaration = new MethodDeclaration();
    
    FstarTranspilerVisitorImpl visiter = new FstarTranspilerVisitorImpl(methodDeclaration);

    Object ret = visiter.filterObjException(
        methodDeclarationParser.MethodDeclarationRoot().jjtAccept(visiter, null)
    );
    
    // System.out.println("");

    InputStream requireInput = new ByteArrayInputStream(transpileSeed.get("require").getBytes());
    FstarTranspiler requireParser = new FstarTranspiler(requireInput);

    ret = visiter.filterObjException(
        requireParser.ConditionRoot().jjtAccept(visiter, null)
    );

    String require = (String)ret;

    // System.out.printf("require = %s\n", require);
    // System.out.println("");

    InputStream ensureInput = new ByteArrayInputStream(transpileSeed.get("ensure").getBytes());
    FstarTranspiler ensureParser = new FstarTranspiler(ensureInput);

    ret = visiter.filterObjException(
        ensureParser.ConditionRoot().jjtAccept(visiter, null)
    );

    String ensure = (String)ret;

    InputStream requireLogicInput = new ByteArrayInputStream(transpileSeed.get("requireLogic").getBytes());
    
    FstarTranspiler requireLogicParser = new FstarTranspiler(requireLogicInput);

    ret = visiter.filterObjException(
        requireLogicParser.ConditionRoot().jjtAccept(visiter, null)
    );

    String requireLogic = (String)ret;

    System.out.println("requireLogic: " + requireLogic);



    InputStream ensureLogicInput = new ByteArrayInputStream(transpileSeed.get("ensureLogic").getBytes());
    
    FstarTranspiler ensureLogicParser = new FstarTranspiler(ensureLogicInput);

    ret = visiter.filterObjException(
        ensureLogicParser.ConditionRoot().jjtAccept(visiter, null)
    );

    String ensureLogic = (String)ret;

    System.out.println("ensureLogic: " + ensureLogic);

    // System.out.printf("ensure = %s\n", ensure);
    // System.out.println("");

    // generateWorkFstarCode

    methodDeclaration = visiter.methodDeclaration;

    String funcName = methodDeclaration.funcName;
    String moduleName = upperCaseFirst(funcName);

    String retFstarType = visiter.fstarTypeMap.get(methodDeclaration.returnType);
    String retValueType = String.format("%s.t", retFstarType);

    // System.out.println(retValueType);

    String initValue = transpileSeed.get("okInitRetValue");
    String ngValue = transpileSeed.get("ngInitRetValue");



    String ngInitRetValue = "";
    if (ngValue.length() == 0) {
        ngInitRetValue = "B.null";
    } else {
        ngInitRetValue = String.format("%s%s", ngValue, visiter.typeSuffixMap.get(methodDeclaration.returnType));
    }

    System.out.println(methodDeclaration.args);


    List<String> argsName = new ArrayList<String>(methodDeclaration.args.keySet());
    
    // require
    // ensure

    String args = ""; // x, y
    String fstarFuncArgs = ""; // x: I32.t ->\n  y: I32.t ->

    // System.out.println(methodDeclaration);

    for (int i = 0; i < argsName.size(); i++) {

        String argName = argsName.get(i);
        args += String.format("%s ", argName);

        // System.out.println(777);
        // System.out.println(methodDeclaration.args.get(argName));

        String argType = String.format("%s.t", visiter.fstarTypeMap.get(methodDeclaration.args.get(argName)));
        fstarFuncArgs += String.format("%s: %s ->\n  ", argName, argType);
    }

    String okInitRetValue = "";

    if (ngValue.length() == 0) {
        okInitRetValue = "B.null";
    } else {
        okInitRetValue = String.format("%s%s", initValue, visiter.typeSuffixMap.get(methodDeclaration.returnType));
    }

    String retArgs = args + "ret";

    // System.out.println(visiter.usedArgsInRequire);

    String fstarCode = null;
    try {
        fstarCode = readAll("./fstar/transpiler/tmpl/fstar.tmpl");
    } catch (Exception e) {
        System.out.println(e);
    }

    fstarCode = fstarCode.replaceAll("@module_name@", moduleName); // funcName

    fstarCode = fstarCode.replaceAll("@ret_value_type@", retValueType); // return.type

    // fstarCode = fstarCode.replaceAll("@ng_init_ret_value@", ngInitRetValue); // どうするか検討
    fstarCode = fstarCode.replaceAll("@ng_init_ret_value@", "???"); // どうするか検討

    fstarCode = fstarCode.replaceAll("@require@", require);// パース結果から構成

    fstarCode = fstarCode.replaceAll("@ensure@", ensure); // パース結果から構成

    fstarCode = fstarCode.replaceAll("@func_name@", funcName); // funcName

    fstarCode = fstarCode.replaceAll("@args@", args); // method.args

    // fstarCode = fstarCode.replaceAll("@ok_init_ret_value@", okInitRetValue); // 検討
    fstarCode = fstarCode.replaceAll("@ok_init_ret_value@", "???"); // 検討

    fstarCode = fstarCode.replaceAll("@fstar_func_args@", fstarFuncArgs); // method.args

    fstarCode = fstarCode.replaceAll("@ret_args@", retArgs); // パース結果から構成, ret を最後に持ってくる

    fstarCode = fstarCode.replaceAll("@require_logic_constraint@", requireLogic); // 事前ロジック
    // System.out.println(fstarCode);

    fstarCode = fstarCode.replaceAll("@ensure_logic_constraint@", ensureLogic); // 事後ロジック


    fstarCode = fstarCode.replaceAll("@struct_ret_name@", returnFstarTypeName);


    // Testing_test_start("Add Test");
    // Testing_eq_i32("Add Test Case1", 3, add(1, 2).value);

    // TODO: 一つの関数の一つのエラーを強制するか

    String testTitle = String.format("%s Func Unit Test", moduleName);
    String testStartFunc = String.format("Testing_test_start(\"%s\");\n", testTitle);
    // String testCaseTitle = "Add Test Case1";

    if (testExpectedResult.length != testFuncArgs.length) {
        throw new Exception("test arg is invalid");
    }

    String testFuncs = "";
    for (int i = 0; i < testFuncArgs.length; i++) {
        String testCaseTitle = String.format("Test Case%d", i + 1);
        String testFuncName = String.format("Testing_eq_%s", retFstarType.toLowerCase());
        String callCFunc = String.format("%s(", funcName);
        // System.out.println(testFuncArgs[i].length);
        String[] arguments = testFuncArgs[i];
        System.out.println(arguments.length);
        for (int j = 0; j < arguments.length; j++) {

            String argument = arguments[j];

            callCFunc += argument;
            if (j != arguments.length - 1) {
                callCFunc += ", ";
            } else {
                callCFunc += ")";
            }
        }

        System.out.println(callCFunc);

        String testFunc = String.format("  %s(\"%s\", %s, %s.value);\n", testFuncName, testCaseTitle, testExpectedResult[i], callCFunc);
        testFuncs += testFunc;
    }

    // System.out.println(testStartFunc);
    // System.out.println(testFuncs);

    String testEnd = "Testing_test_end();";
    // System.out.println("Testing_test_end();");

    // String testCodes = String.format("  %s\n%s\n  %s", testStartFunc, testFuncs, testEnd);

    String testCodes = String.format("  %s\n%s\n  %s", testStartFunc, "  ???", testEnd);

    String testCode = null;

    testCode = readAll("./fstar/transpiler/tmpl/test_c.tmpl");

    testCode = testCode.replaceAll("@header_name@", moduleName);
    testCode = testCode.replaceAll("@test_codes@", testCodes);

    // System.out.println(testCode);

    String mainCode = null;

    mainCode = readAll("./fstar/transpiler/tmpl/main_c.tmpl");

    mainCode = mainCode.replaceAll("@func_name@", funcName);

    // System.out.println(mainCode);

    String makefileCode = null;

    makefileCode = readAll("./fstar/transpiler/tmpl/makefile.tmpl");
    makefileCode = makefileCode.replaceAll("@func_name@", funcName);
    makefileCode = makefileCode.replaceAll("@module_name@", moduleName);

    // System.out.println(makefileCode);

    String dirPath = String.format(projectDirPath + "/%s", funcName);

    Path dp = Paths.get(dirPath);

    // System.out.println(p.listFiles());


    String fstarFilePath = String.format("%s/%s", dirPath, String.format("%s.fst", funcName));
    String mainFilePath = String.format("%s/%s", dirPath, "main.c");
    String testFilePath = String.format("%s/%s", dirPath, "test.c");
    String makefilePath = String.format("%s/%s", dirPath, "Makefile");

    if (Files.exists(dp)) {
        Files.deleteIfExists(Paths.get(fstarFilePath));
        Files.deleteIfExists(Paths.get(mainFilePath));
        Files.deleteIfExists(Paths.get(testFilePath));
        Files.deleteIfExists(Paths.get(makefilePath));
    } else {
        Files.createDirectory(dp);
    }

    // TODO: これを外部に公開する際は、インジェクション攻撃対策をする

    writeAll(fstarFilePath, fstarCode);

    writeAll(mainFilePath, mainCode);

    writeAll(testFilePath, testCode);

    writeAll(makefilePath, makefileCode);

    return "";
  }
}


